{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npx nx build evoque-api && npm ci --prefix dist/apps/evoque-api --omit=dev"
  },
  "deploy": {
    "startCommand": "node dist/apps/evoque-api/main.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

